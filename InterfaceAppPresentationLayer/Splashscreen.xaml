<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceAppPresentationLayer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="InterfaceAppPresentationLayer.Splashscreen"
        mc:Ignorable="d"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="400" Width="700" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/assets/spashscreen.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="144*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>

        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="5" VerticalAlignment="Bottom" Width="700" Grid.ColumnSpan="3" RenderTransformOrigin="0.5,1" Background="#FF013961" Foreground="#FF2F6D89" BorderBrush="{x:Null}" Margin="1,0,0,0"/>

    </Grid>
</Window>
