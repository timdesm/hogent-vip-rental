<ui:Page x:Class="InterfaceAppPresentationLayer.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterfaceAppPresentationLayer"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource settings_title}">

    <Grid Margin="24,0,24,24">
        <ui:SimpleStackPanel>
            <ui:ToggleSwitch x:Name="themeToggle" Header="{DynamicResource settings_controls_dark_header}"/>
            <ComboBox ui:ControlHelper.Header="{DynamicResource settings_controls_language_header}" x:Name="languageBox" SelectionChanged="languageBox_SelectionChanged"  Width="150" Margin="0,5,0,0" />
        </ui:SimpleStackPanel>
    </Grid>
</ui:Page>
